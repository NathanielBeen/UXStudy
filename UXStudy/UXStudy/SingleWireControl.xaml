<UserControl x:Class="UXStudy.SingleWireControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UXStudy"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Line X1="{Binding TopConnect.Left}" Y1="{Binding TopConnect.Top}"
          X2="{Binding BottomConnect.Left}" Y2="{Binding CottomConnect.Top}"
          StrokeThickness="4" Fill="{Binding Color}">
        <Line.InputBindings>
            <MouseBinding Gesture="LeftClick" Command="{Binding ClickCommand}"/>
        </Line.InputBindings>
    </Line>
</UserControl>
