<UserControl x:Class="UXStudy.SingleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UXStudy"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Label Grid.Column="0" Content="{Binding Title}" VerticalAlignment="Center"/>
        <CheckBox Grid.Column="1" IsChecked="{Binding Checked}" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
